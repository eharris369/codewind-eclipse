<plugin>
 
<!-- This relies on org.eclipse.codewind.ui org.eclipse.debug.ui.launchConfigurationTabGroups extension -->
<extension point="org.eclipse.debug.core.launchConfigurationTypes">
    <launchConfigurationType
      id="org.eclipse.codewind.core.internal.launchConfigurationType"
      name="%LAUNCH_CONFIG_NAME"
      delegate="org.eclipse.codewind.core.internal.launch.MicroclimateLaunchConfigDelegate"
      modes="run, debug"
      public="false"
      sourceLocatorId="org.eclipse.jdt.launching.sourceLocator.JavaSourceLookupDirector"
      sourcePathComputerId="org.eclipse.codewind.core.internal.MicroclimateSourcePathComputer"/>
</extension>

<extension point="org.eclipse.debug.core.sourcePathComputers">
	<sourcePathComputer
		id="org.eclipse.codewind.core.internal.MicroclimateSourcePathComputer"
		class="org.eclipse.codewind.core.internal.launch.MicroclimateSourcePathComputer"
		name="Microclimate Source Path Computer">
	</sourcePathComputer>
</extension>

  <extension point="org.eclipse.core.resources.markers"
    id="validationMarker"
    name="%VALIDATION_MARKER">
    <persistent value="true"/>
    <super type="org.eclipse.core.resources.problemmarker"/>
  </extension>

</plugin>
